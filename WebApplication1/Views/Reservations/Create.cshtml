
@model ReservationCreateModel
@{
    var courses = Model.Courses.Select(c => new SelectListItem()
    {
        Value = c.Id.ToString(),
        Text = c.Name
    });
    var instructors = Model.Instructors.Select(c => new SelectListItem()
    {
        Value = c.Id.ToString(),
        Text = c.Name
    });
    var rooms = Model.Rooms.Select(c => new SelectListItem()
    {
        Value = c.Id.ToString(),
        Text = c.Name
    });

}
<h1 class="text-center">reserve room</h1>
<form method="post" style="width: 30%;margin: auto">
    <div class="form-group">
        <label asp-for="@Model.Reservation.Start" class="col-md-2 control-label"></label>

        <input name="Start" asp-for="@Model.Reservation.Start" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Reservation.End" class="col-md-2 control-label"></label>

        <input name="End" asp-for="@Model.Reservation.End" class="form-control"/>
    </div>
    <div class="form-group">
        <select class="form-control" id="courses" name="CourseId" asp-items="courses"></select>

    </div>
    <div class="form-group">
        <select class="form-control" id="rooms" name="RoomId" asp-items="rooms"></select>
    </div>
    <div class="form-group">
        <select class="form-control" id="Instructors" name="InstructorId" asp-items="instructors"></select>
    </div>
    <div class="text-center">
        <button type="submit" class=" btn btn-primary">Submit</button>
      </div>
</form>

